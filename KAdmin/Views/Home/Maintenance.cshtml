<body class="page-body login-page login-form-fall" data-url="http://demo.neontheme.com">
    <div class="login-container">
        <div class="login-header login-caret pd-b4">
            <div class="login-content">
                <a href="/" class="logo">
                    <img src="" width="120" alt="" />
                </a>
                <p class="description">k-admin</p> <!-- progress bar indicator -->
                @{ 

                    if (ViewBag.kitsuneStatus.IsMaintenanceBreak || ViewBag.kitsuneStatus.IsApiDown )
                    {
                        <p class="description pd-t2">@ViewBag.kitsuneStatus.Detail.Title</p>
                    }
                    else
                    {
                        <p class="description pd-t2">@ViewBag.kitsuneStatus.Detail.Title</p>
                    }

                }
                <div class="login-progressbar-indicator">
                    <h3>43%</h3> <span>logging...</span>
                </div>
            </div>
        </div>
        <div class="login-form wrapper">

            @{

                if (ViewBag.kitsuneStatus.IsMaintenanceBreak || ViewBag.kitsuneStatus.IsApiDown )
                {
                    <div class="message-container">
                        @*<span class="title">@ViewBag.kitsuneStatus.Detail.Title</span>*@
                        <span class="description big-font-size">@ViewBag.kitsuneStatus.Detail.Description</span>
                    </div>
                }
                else
                {
                    <div class="message-container big-font-size">
                        <span class="description">@ViewBag.kitsuneStatus.Detail.Description</span>
                    </div>
                }

            }

        </div>
    </div>
